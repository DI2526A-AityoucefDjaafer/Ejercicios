<Window x:Class="A3._2._3_VisorImagenes_Estilo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3._2._3_VisorImagenes_Estilo"
        mc:Ignorable="d"
        Title="Visor de imagenes" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="FooterDockStyle" TargetType="DockPanel">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="FooterTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Rubik"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="15,0,0,0"/>
        </Style>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Rubik"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="SidebarBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="SidebarDockStyle" TargetType="DockPanel">
            <Setter Property="Background" Value="LightGreen"/>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style x:Key="ImagesWrapStyle" TargetType="WrapPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="ThumbnailStyle" TargetType="Image">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="200"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Style="{StaticResource FooterDockStyle}">
            <TextBlock Text="Nº de imágenes: 10"
                       Style="{StaticResource FooterTextStyle}"/>
            <TextBlock Text="Diseñado por Javier Catalá"
                       Style="{StaticResource FooterTextStyle}"
                       HorizontalAlignment="Right"
                       Margin="0,0,15,0"/>
        </DockPanel>

        <Border DockPanel.Dock="Right" Style="{StaticResource SidebarBorderStyle}">
            <DockPanel Style="{StaticResource SidebarDockStyle}">

                <StackPanel DockPanel.Dock="Top"
                            Margin="5"
                            VerticalAlignment="Top">
                    <Button Content="Añadir imagen" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="Eliminar imagen" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="Eliminar todas" Style="{StaticResource SidebarButtonStyle}"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom"
                            Margin="5"
                            VerticalAlignment="Bottom">
                    <Button Content="Rotar" Style="{StaticResource SidebarButtonStyle}"/>
                    <Button Content="Recortar" Style="{StaticResource SidebarButtonStyle}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <TextBlock DockPanel.Dock="Top"
                   Text="Visor de imágenes"
                   Style="{StaticResource TitleTextStyle}"/>

        <WrapPanel x:Name="panelImagenes"
                   Style="{StaticResource ImagesWrapStyle}">
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
            <Image Source="Assets/episodioIV.jpg" Style="{StaticResource ThumbnailStyle}"/>
        </WrapPanel>
    </DockPanel>
</Window>
