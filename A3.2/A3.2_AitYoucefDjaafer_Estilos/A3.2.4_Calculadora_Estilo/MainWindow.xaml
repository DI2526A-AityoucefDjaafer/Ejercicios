<Window x:Class="A3._2._4_Calculadora_Estilo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3._2._4_Calculadora_Estilo"
        mc:Ignorable="d"
       Title="Calculadora" Height="450" Width="450">

    <Window.Resources>
        <Style TargetType="TextBox" x:Key="EstiloDisplay">
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <Style TargetType="Button" x:Key="EstiloBoton">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#D9D9D9"/>
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0E0FF"/>
                    <Setter Property="BorderBrush" Value="#5B9BD5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A7D1FF"/>
                    <Setter Property="BorderBrush" Value="#2E75B6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Background="White" Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="txtDisplay"
                     Grid.Row="0"
                     Style="{StaticResource EstiloDisplay}" Margin="5,-62,5,5"/>

            <Grid Grid.Row="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" Content="1" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>
                <Button Grid.Row="0" Grid.Column="1" Content="2" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>
                <Button Grid.Row="0" Grid.Column="2" Content="3" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>

                <Button Grid.Row="1" Grid.Column="0" Content="4" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>
                <Button Grid.Row="1" Grid.Column="1" Content="5" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>
                <Button Grid.Row="1" Grid.Column="2" Content="6" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>

                <Button Grid.Row="2" Grid.Column="0" Content="7" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>
                <Button Grid.Row="2" Grid.Column="1" Content="8" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>
                <Button Grid.Row="2" Grid.Column="2" Content="9" Style="{StaticResource EstiloBoton}" Click="Button_Click"/>

                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                        Content="0" Style="{StaticResource EstiloBoton}" Click="Button_Click" Margin="3,3,3,-37"/>
            </Grid>
        </Grid>
    </Viewbox>

</Window>
