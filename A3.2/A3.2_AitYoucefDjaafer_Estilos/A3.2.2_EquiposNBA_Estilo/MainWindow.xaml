<Window x:Class="A3._2._2_EquiposNBA_Estilo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3._2._2_EquiposNBA_Estilo"
        mc:Ignorable="d"
        Title="Equipos NBA" Height="491" Width="800">           
    <Window.Resources>

        <Style x:Key="TeamBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="TeamTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="TeamImageStyle" TargetType="Image">
            <Setter Property="Height" Value="150"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0"/>
        </Style>

        <Style x:Key="TeamWrapStyle" TargetType="WrapPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InnerStackStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>

    </Window.Resources>

    <StackPanel Orientation="Vertical" Margin="10">

        <Border Style="{StaticResource TeamBorderStyle}">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF431AB7"/>
                    <GradientStop Color="#FFFDE803" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Style="{StaticResource InnerStackStyle}">
                <TextBlock Text="Los Ángeles Lakers" Style="{StaticResource TeamTitleStyle}"/>
                <WrapPanel Style="{StaticResource TeamWrapStyle}">
                    <Image Source="/Assets/9_lakers.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/14_lakers.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/23_lakers.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/3_lakers.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/39_lakers.png" Style="{StaticResource TeamImageStyle}"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource TeamBorderStyle}" Margin="5">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2F2B2B"/>
                    <GradientStop Color="#FFFF1C05" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Style="{StaticResource InnerStackStyle}">
                <TextBlock Text="Miami Heat" Style="{StaticResource TeamTitleStyle}" Foreground="#FFFDFAFA"/>
                <WrapPanel Style="{StaticResource TeamWrapStyle}">
                    <Image Source="/Assets/7_heat.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/14_heat.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/22_heat.png" Style="{StaticResource TeamImageStyle}"/>
                    <Image Source="/Assets/99_heat.png" Height="123" Width="130" Margin="5"/>
                    <Image Source="/Assets/13_heat.png" Style="{StaticResource TeamImageStyle}"/>
                </WrapPanel>
            </StackPanel>
        </Border>

    </StackPanel>

</Window>
