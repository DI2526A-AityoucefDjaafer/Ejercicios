<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Superheroes"
        xmlns:conv="clr-namespace:Superheroes.Converters"
        Title="Superheroes"
        WindowStartupLocation="CenterScreen"
        Width="800" Height="600"
        Background="{Binding Heroe, Converter={StaticResource HeroeToColorConverter}}">

    <Window.Resources>
        <conv:HeroeToColorConverter x:Key="HeroeToColorConverter"/>
        <conv:GruposToLogosConverter x:Key="GruposToLogosConverter"/>
    </Window.Resources>
    
    <Grid>
        <TextBlock Text="{Binding Nombre}" 
                   FontSize="36" FontWeight="Bold" 
                   Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Image Source="{Binding ImagenRuta}" 
               Stretch="Uniform" 
               Margin="20" 
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20">
            <ItemsControl ItemsSource="{Binding ., Converter={StaticResource GruposToLogosConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Width="40" Height="40" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <Image Source="Assets/arrow.png" Width="50" Height="50" 
               HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20"
               Cursor="Hand" MouseDown="Anterior_Click"/>

        <Image Source="Assets/arrow.png" Width="50" Height="50" 
               HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20"
               Cursor="Hand" MouseDown="Siguiente_Click" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform Angle="180"/>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
