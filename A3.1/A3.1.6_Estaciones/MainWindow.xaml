<Window x:Class="A3._1._6_Estaciones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3._1._6_Estaciones"
        mc:Ignorable="d"
        Title="Las 4 estaciones" Height="440" Width="783"
        Background="#F6F3F3">
    <DockPanel LastChildFill="True">

        <Border DockPanel.Dock="Top" Height="60" Background="#C3E0E5">
            <TextBlock Text="Las 4 estaciones"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Segoe UI Black"
                       FontSize="38"
                       FontWeight="Bold"
                       Foreground="#2C4A7A"
                       Margin="0,10,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="3"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <UniformGrid Rows="2" Columns="2" Margin="8" Background="#DDEEEF">
            
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Margin="4"
                          Background="#EAF6FA"
                          MinWidth="380"
                          MinHeight="170">
                <Image Source="Assets/invierno.jpg"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </ScrollViewer>

            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Margin="4"
                          Background="#EAF6FA"
                          MinWidth="380"
                          MinHeight="170">
                <Image Source="Assets/primavera.jpg"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </ScrollViewer>

            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Margin="4"
                          Background="#EAF6FA"
                          MinWidth="380"
                          MinHeight="170">
                <Image Source="Assets/verano.jpg"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </ScrollViewer>

            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Margin="4"
                          Background="#EAF6FA"
                          MinWidth="380"
                          MinHeight="170">
                <Image Source="Assets/otoño.jpg"
                       Stretch="UniformToFill"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </ScrollViewer>
        </UniformGrid>
    </DockPanel>
</Window>
