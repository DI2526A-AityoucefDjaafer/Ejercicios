    <None Remove="Assets\verano.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\sun.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\invierno.jpg" />
    <Resource Include="Assets\otoño.jpg" />
    <Resource Include="Assets\primavera.jpg" />
    <Resource Include="Assets\verano.jpg" />
  </ItemGroup>

