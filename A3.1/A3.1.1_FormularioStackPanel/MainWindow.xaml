<Window x:Class="A3._1._1_FormularioStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3._1._1_FormularioStackPanel"
        mc:Ignorable="d"
        Title="Formulario StackPanel" Height="450" Width="800">
    <StackPanel Margin="10" VerticalAlignment="Top">
        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF12A905"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="Nombre:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Height="30" FontSize="16" FontWeight="Bold" Margin="10,0,10,15"></TextBox>
        </StackPanel>

        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF7AB1ED"/>
                    <GradientStop Color="#FFF1F3F5" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="Dirección:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Height="30" FontSize="16" FontWeight="Bold" Margin="10,0,10,15"></TextBox>
        </StackPanel>

        <StackPanel>
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFDA97BF"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="Correo Electrónico:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Height="30" FontSize="16" FontWeight="Bold" Margin="10,0,10,20"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="right" >
            <Button Content="Aceptar" Width="100" Margin="0,0,10,0"/>
            <Button Content="Cancelar" Width="100"/>
        </StackPanel>

    </StackPanel>
</Window>
