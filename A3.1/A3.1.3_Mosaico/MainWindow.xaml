<Window x:Class="A3._1._3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A3._1._3_Mosaico"
        mc:Ignorable="d"
        Title="Mosaico" Height="800" Width="800">
    
    <Grid>
        <DockPanel LastChildFill="True">
            <TextBlock Background="BlueViolet" DockPanel.Dock="Top" Height="100"/>
            <TextBlock Background="BlueViolet" DockPanel.Dock="Left" Width="100"/>

            <DockPanel LastChildFill="True">
                <TextBlock Background="ForestGreen" DockPanel.Dock="Bottom" Height="100"/>
                <TextBlock Background="ForestGreen" DockPanel.Dock="Right" Width="100"/>

                <DockPanel LastChildFill="True">

                    <TextBlock Background="DarkOrange" DockPanel.Dock="Left" Width="100"/>
                    <TextBlock Background="DarkOrange" DockPanel.Dock="Bottom" Height="100"/>
                    
                    <DockPanel LastChildFill="True">
                        <TextBlock Background="DeepPink" DockPanel.Dock="Right" Width="100"/>
                        <TextBlock Background="DeepPink" DockPanel.Dock="Top" Height="100"/>
                        <TextBlock Background="Black"/>
                    </DockPanel>
                </DockPanel>
            </DockPanel>

        </DockPanel>
    </Grid>
</Window>
